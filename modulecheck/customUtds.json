{
  "title": "JSON schema for insight_intent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "customUtds"
  ],
  "propertyNames": {
    "enum": [
      "customUtds"
    ]
  },
  "properties": {
    "customUtds": {
      "description": "Indicates the configuration of customUtds.",
      "type": "array",
      "minItems": 1,
      "maxItems": 32,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "enum": [
            "typeId",
            "belongingToTypes",
            "filenameExtensions",
            "mimeTypes",
            "description",
            "referenceURL",
            "iconFile",
            "ownerBundle",
            "installerBundles"
          ]
        },
        "required": [
          "typeId",
          "belongingToTypes"
        ],
        "properties": {
          "typeId": {
            "description": "Indicates the name of utd type.",
            "type": "string",
            "pattern": "[a-zA-Z0-9/.-]+$"
          },
          "belongingToTypes": {
            "description": "Indicates the utd type that this type depends on.",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
          },
          "filenameExtensions": {
            "description": "Indicates the file name extensions of utd type.",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^[/.].*"
            }
          },
          "mimeTypes": {
            "description": "Indicates the mime types of utd type.",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
          },
          "description": {
            "description": "Indicates the description of utd type.",
            "type": "string"
          },
          "referenceURL": {
            "description": "Indicates the referenceURL of utd type.",
            "type": "string"
          },
          "iconFile": {
            "description": "Indicates the icon file of utd type.",
            "type": "string"
          },
          "ownerBundle": {
            "description": "Indicates the owner bundle of utd type.",
            "type": "string"
          },
          "installerBundles": {
            "description": "Indicates the installer bundles of utd type.",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}